<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RelativeLayoutandroid="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/LnSwipe"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:fillAfter="true"
        android:weightSum="2">

        <TextView
            android:id="@+id/TxtPacked"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:text="Packed"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/TxtNotAvailable"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d1cc1407"
            android:gravity="center"
            android:text="Not\n Available"
            android:textColor="#fff" />


    </LinearLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/LnrViewOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/LnrProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/TxtProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingRight="5dp"
                        android:text="mango"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#343434"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TxtProductVariant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text=""
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#343434"
                        android:textStyle="bold" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <!--<TextView-->
                        <!--android:id="@+id/txtCategory"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:gravity="start"-->
                        <!--android:text="Category:"-->
                        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"-->
                        <!--android:textColor="#818181" />-->


                    <TextView
                        android:id="@+id/TxtProductCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="start"
                        android:paddingRight="5dp"
                        android:text=""
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#343434" />// android:layout_toEndOf="@id/txtCategory"


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <!--<TextView-->
                        <!--android:id="@+id/Quantity"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:gravity="start"-->
                        <!--android:text="Quantity:"-->
                        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"-->
                        <!--android:textColor="#818181" />-->


                    <TextView
                        android:id="@+id/TxtWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"

                        android:gravity="start"
                        android:text="5"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#323232" />//android:layout_toEndOf="@id/Quantity"


                    <TextView
                        android:id="@+id/TxtQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@id/TxtWeight"
                        android:gravity="start"
                        android:text="2"
                        android:textAllCaps="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="#323232" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtTotalWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:text="5"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@color/colorGreen" />
            </LinearLayout>

        </RelativeLayout>


    </FrameLayout>

</com.daimajia.swipe.SwipeLayout>


